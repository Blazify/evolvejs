{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "rootDir": "./src/",
    "lib": ["es6", "ESNext", "DOM"],
    "declaration": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "watch": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist", "test.js", "TestBot"]
}
